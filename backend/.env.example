# ─────────────────────────────────────────────────────────────────────────────
# Application
# ─────────────────────────────────────────────────────────────────────────────
APP_NAME=CodingAgent
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development
LOG_LEVEL=INFO

# ─────────────────────────────────────────────────────────────────────────────
# Server
# ─────────────────────────────────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8080
WORKERS=1
RELOAD=true
API_BASE_URL=http://localhost:8080

# ─────────────────────────────────────────────────────────────────────────────
# PostgreSQL
# ─────────────────────────────────────────────────────────────────────────────
POSTGRES_USER=codeagent
POSTGRES_PASSWORD=codeagent
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=codeagent
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=10
DB_COMMAND_TIMEOUT=60

# ─────────────────────────────────────────────────────────────────────────────
# Redis
# ─────────────────────────────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_DB=0
REDIS_DEFAULT_TTL=3600
REDIS_MAX_CONNECTIONS=10
RESULT_CACHE_TTL=3600

# ─────────────────────────────────────────────────────────────────────────────
# MinIO (S3-compatible storage)
# ─────────────────────────────────────────────────────────────────────────────
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET=codingagent
MINIO_PUBLIC_ENDPOINT=http://localhost:9000

# ─────────────────────────────────────────────────────────────────────────────
# JWT Authentication
# ─────────────────────────────────────────────────────────────────────────────
# Secret key for JWT encoding/decoding. Use openssl rand -hex 32 to generate a secure key.
JWT_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ─────────────────────────────────────────────────────────────────────────────
# Admin User (created on first startup)
# ─────────────────────────────────────────────────────────────────────────────
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Password@1234
ADMIN_FULL_NAME="System Administrator"

# ─────────────────────────────────────────────────────────────────────────────
# LLM Configuration
# ─────────────────────────────────────────────────────────────────────────────
LLM_MODEL=nvidia_nim/openai/gpt-oss-120b
SMALL_LLM_MODEL=nvidia_nim/openai/gpt-oss-20b
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096
NVIDIA_NIM_API_KEY=
OPENROUTER_API_KEY=
OPENROUTER_API_BASE=https://openrouter.ai/api/v1

# ─────────────────────────────────────────────────────────────────────────────
# CORS
# ─────────────────────────────────────────────────────────────────────────────
# Comma-separated list of origins
CORS_ORIGINS=http://localhost:5170,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ─────────────────────────────────────────────────────────────────────────────
# Code Execution
# ─────────────────────────────────────────────────────────────────────────────
EXECUTOR_TYPE=smolagents
EXECUTOR_TIMEOUT_SECONDS=30
EXECUTOR_MAX_RETRIES=3

# ─────────────────────────────────────────────────────────────────────────────
# Database Operations
# ─────────────────────────────────────────────────────────────────────────────
MAX_TABLE_SAMPLE_SIZE=100
